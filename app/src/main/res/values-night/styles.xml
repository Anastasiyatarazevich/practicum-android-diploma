<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Screen.Background" parent="">
        <item name="android:background">@color/hh_back_theme</item>
    </style>

    <style name="Text.Base" parent="">
        <item name="android:textColor">@color/hh_mode_text</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Title" parent="Text.Base">
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="Text.Main.Bold" parent="Text.Base">
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.DevInfo" parent="Text.Base">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="Text.Body" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item> <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.App.Icon.Action">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/hh_back_theme</item>
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
    </style>

</resources>
