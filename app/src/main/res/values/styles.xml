<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Screen.Background" parent="">
        <item name="android:background">@color/hh_back_theme</item>
    </style>

    <style name="Text.Base" parent="">
        <item name="android:textColor">@color/hh_mode_text</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
    </style>

    <style name="Text.Title" parent="Text.Base">
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="Text.Main.Bold" parent="Text.Base">
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.DevInfo" parent="Text.Base">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="AppBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/hh_back_theme</item>
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
    </style>

    <style name="MaterialToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_size_64</item>
        <item name="titleTextColor">@color/hh_mode_text</item>
        <item name="titleTextAppearance">@style/Text.Title</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">12dp</item>

        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">?attr/textAppearanceBody2</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="NoConnectionImagePlaceholder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
