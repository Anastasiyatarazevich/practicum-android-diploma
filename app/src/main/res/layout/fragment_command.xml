<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Screen.Background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".command.ui.CommandFragment">

    <TextView
        android:id="@+id/titleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CommandTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        style="@style/Text.Title"
        />

    <TextView
        android:id="@+id/mainText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/titleId"
        app:layout_constraintTop_toBottomOf="@id/titleId"
        android:text="@string/CommandTextFirst"
        android:layout_marginTop="44dp"
        style="@style/Text.Main.Bold"
        />

    <TextView
        android:id="@+id/mainText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/mainText1"
        app:layout_constraintTop_toBottomOf="@id/mainText1"
        android:text="@string/CommandTextSecond"
        style="@style/Text.Main.Bold"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/mainText2"
        app:layout_constraintStart_toStartOf="@id/mainText2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dev1"
            style="@style/Text.DevInfo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:text="@string/dev2"
            style="@style/Text.DevInfo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dev3"
            style="@style/Text.DevInfo"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
