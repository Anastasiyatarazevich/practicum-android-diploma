<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hh_back_theme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".search.presenter.MainFragment">

    <TextView
        android:id="@+id/searchTitleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Text.Title"
        android:text="@string/searchvacancy_title">
    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/filter_off"
        android:padding="20dp"
        >
    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editTextContainerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:background="@drawable/search_edit_text_background"
        app:layout_constraintTop_toBottomOf="@id/searchTitleId"
        android:layout_marginHorizontal="16dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:hint="@string/searchvacancy_search"
            android:paddingStart="16dp"
            android:fontFamily="@font/ys_text_regular"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColorHint="@color/hint_color"
            app:layout_constraintTop_toTopOf="parent">
        </EditText>

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="16dp"
            android:src="@drawable/search_24px">
        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vacanciesRvId"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextContainerId"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/searchPreviewId"
        android:layout_width="328dp"
        android:layout_height="223dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextContainerId"
        android:layout_marginTop="156dp"
        android:layout_marginHorizontal="16dp"
        android:src="@drawable/empty_icon">
    </ImageView>

    <LinearLayout
        android:id="@+id/noInternetPreviewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextContainerId"
        >
        <ImageView
            android:layout_width="328dp"
            android:layout_height="223dp"
            android:layout_marginTop="135dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/nointernet_icon">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/searchvacancy_nointernet_error"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ys_text_medium"
            android:textSize="22sp"
            style="@style/Text.Title"
            >
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/notFoundPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextContainerId"
        >
        <ImageView
            android:layout_width="328dp"
            android:layout_height="223dp"
            android:layout_marginTop="135dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/notfound_icon">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/searchvacancy_notfound_error"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ys_text_medium"
            android:textSize="22sp"
            style="@style/Text.Title"
            >
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/infoShieldId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Таких вакансий нет"
        android:visibility="gone"
        android:textSize="16sp"
        android:textColor="@color/divider_color"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:fontFamily="@font/ys_text_regular"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/editTextContainerId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background = "@drawable/info_shield_background"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>
